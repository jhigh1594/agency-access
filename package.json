{
  "name": "agency-access-platform",
  "version": "0.1.0",
  "private": true,
  "description": "OAuth aggregation platform for marketing agencies",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:design-os": "cd tools/design-os && npm run dev",
    "design-os": "bash ./scripts/start-design-os.sh",
    "design-os:quick": "bash ./scripts/design-os.sh",
    "db:seed": "npm run db:seed --workspace=apps/api",
    "build": "npm run build --workspace=packages/shared && npm run build --workspace=apps/api && npm run build --workspace=apps/web",
    "build:web": "npm run build --workspace=packages/shared && npm run build --workspace=apps/web",
    "build:design-os": "cd tools/design-os && npm run build",
    "lint": "npm run lint --workspace=apps/api && npm run lint --workspace=apps/web",
    "test": "npm run test --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    "perf:api": "node scripts/perf/benchmark-api.mjs",
    "perf:browser": "node scripts/perf/benchmark-browser.mjs",
    "perf:report": "node scripts/perf/generate-report.mjs"
  },
  "dependencies": {
    "@vercel/speed-insights": "^1.3.1",
    "nanoid": "^5.1.6",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "typescript": "^5.7.2"
  },
  "overrides": {
    "axios": "^1.13.5"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
