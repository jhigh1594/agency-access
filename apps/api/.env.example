# Backend Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/agency_access

# Redis (Upstash or Local)
REDIS_URL=redis://localhost:6379

# Infisical (Secrets Management)
INFISICAL_CLIENT_ID=your-client-id
INFISICAL_CLIENT_SECRET=your-client-secret
INFISICAL_PROJECT_ID=your-project-id
INFISICAL_ENV=dev

# Clerk Authentication
CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...

# Platform Credentials (OAuth)

# Meta
META_APP_ID=your-app-id
META_APP_SECRET=your-app-secret

# Kit (ConvertKit)
KIT_CLIENT_ID=your-client-id
KIT_CLIENT_SECRET=your-client-secret

# Beehiiv (Agency API Key - for team invitation workflow)
BEEHIIV_API_KEY=your-agency-api-key

# Google (Ads, GA4)
GOOGLE_CLIENT_ID=your-client-id
GOOGLE_CLIENT_SECRET=your-client-secret

# LinkedIn
LINKEDIN_CLIENT_ID=your-client-id
LINKEDIN_CLIENT_SECRET=your-client-secret

# TikTok
TIKTOK_APP_ID=your-app-id
TIKTOK_APP_SECRET=your-app-secret

# Mailchimp
MAILCHIMP_CLIENT_ID=your-client-id
MAILCHIMP_CLIENT_SECRET=your-client-secret

# Pinterest OAuth
# Note: Pinterest Business ID is collected from users during authorization flow
PINTEREST_CLIENT_ID=your-app-id
PINTEREST_CLIENT_SECRET=your-app-secret

# Klaviyo
KLAVIYO_CLIENT_ID=your-public-api-key
KLAVIYO_CLIENT_SECRET=your-private-api-key

# Shopify
SHOPIFY_API_KEY=your-api-key
SHOPIFY_API_SECRET_KEY=your-api-secret-key

# Zapier
ZAPIER_CLIENT_ID=your_zapier_client_id_here
ZAPIER_CLIENT_SECRET=your_zapier_client_secret_here

# Creem Payments
CREEM_API_KEY=creem_test_your_api_key_here
CREEM_WEBHOOK_SECRET=whsec_your_webhook_secret_here
CREEM_API_URL=https://api.creem.io/v1

# Resend Email Service
RESEND_API_KEY=re_your_api_key_here

# Logging
LOG_LEVEL=info

# Security Configuration

# Rate Limiting (prevents DoS/brute force attacks)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_TIME_WINDOW_SECONDS=60
RATE_LIMIT_SKIP_AUTHENTICATED=true

# OAuth State Security (HMAC signing for CSRF protection)
# Generate with: openssl rand -hex 32
OAUTH_STATE_HMAC_SECRET=your-hmac-secret-key-32-bytes-hex-generated-with-openssl-rand-hex-32
