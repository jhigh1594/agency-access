# Backend Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/agency_access

# Redis (Upstash or Local)
REDIS_URL=redis://localhost:6379

# Infisical (Secrets Management)
INFISICAL_CLIENT_ID=your-client-id
INFISICAL_CLIENT_SECRET=your-client-secret
INFISICAL_PROJECT_ID=your-project-id
INFISICAL_ENV=dev

# Clerk Authentication
CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...

# Platform Credentials (OAuth)

# Meta
META_APP_ID=your-app-id
META_APP_SECRET=your-app-secret

# Kit (ConvertKit)
KIT_CLIENT_ID=your-client-id
KIT_CLIENT_SECRET=your-client-secret

# Beehiiv (Agency API Key - for team invitation workflow)
BEEHIIV_API_KEY=your-agency-api-key

# Google (Ads, GA4)
GOOGLE_CLIENT_ID=your-client-id
GOOGLE_CLIENT_SECRET=your-client-secret

# LinkedIn
LINKEDIN_CLIENT_ID=your-client-id
LINKEDIN_CLIENT_SECRET=your-client-secret

# TikTok
TIKTOK_CLIENT_ID=your-client-id
TIKTOK_CLIENT_SECRET=your-client-secret

# Logging
LOG_LEVEL=info
